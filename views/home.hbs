            function displayFloorPlan(){
                var location = "{{location}}";
                if(location == "8th Floor"){
                    document.getElementById("MapArea").style.backgroundImage = "url(71474412_398192217540257_9018590216679587840_n%20copy.png)";
                }
                else{
                    document.getElementById("MapArea").style.backgroundImage = "url(8thFloorMezz.JPG)";
                }
                
                
                if(location == "8th Floor"){
                    document.getElementById("Drt").style.visibility = "visible";
                    document.getElementById("Drt2").style.visibility = "visible";
                }
                else{
                    document.getElementById("Drt").style.visibility = "hidden";
                    document.getElementById("Drt2").style.visibility = "hidden";
                }
            }
        </script>
