        <script type="text/javascript">
            $(document).ready(()=>{
                console.log('ready');
                $('#basicButton').click(()=>{
                    console.log('basic search on ' + new Date());
                    
                    $.ajax({
                        url: '/SearchShelf/' + $('#basicquery').val(),
                        type: 'GET',
                        data: {
                            basicquery: $('#basicquery').val()
                        },
                        dataType: 'json',
                        success: (response) => {
                            console.log(response);
                            $(".result").remove();
                            response.forEach((data)=>{
                                $('#basicresults').append('<div class="result" data-toggle="collapse" href="#' + data._id + '">' + 
                                                          '<span id="shelfnumber">' + 'Shelf ' + data.shelf_number + '</span>' + 
                                                          '<span id="buttonholder">' + '<button onclick="changePicture()" class="btn btn-success" value="' + data.shelf_number + '">GO</button>' + '</span>' + 
                                                            '<div id="' + data._id + '" class="collapse expandinfo">' +
                                                                '<div>' + data.subject_codes + '</div>' +
                                                                '<div>' + data.subject_names + '</div>' +
                                                            '</div>' +
                                                          '</div>');
                                
                            });
                        }
                    });
                });
            });
        </script>
